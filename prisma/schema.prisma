// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int        @id @default(autoincrement())
  fullName  String 
  email  String     @unique
  password   String
  token   String?
  Kirim  Kirim[]
  Chiqim Chiqim[]
}

model Kirim {
  id       Int        @id @default(autoincrement())
  title    String
  amount   Int
  tushum   Tushumlar  @relation(fields: [tushumId], references: [id])
  tushumId Int
  user     User       @relation(fields: [userId], references: [id])
  userId   Int
  createdAt DateTime  @default(now())
}

model Chiqim {
  id        Int        @id @default(autoincrement())
  title     String
  amount    Int
  xarajat   Xarajatlar @relation(fields: [xarajatId], references: [id])
  xarajatId Int
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime  @default(now())
}

model Xarajatlar {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  Chiqim      Chiqim[]
}

model Tushumlar {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  Kirim       Kirim[]
}
